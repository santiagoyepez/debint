<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="JPA" transaction-type="RESOURCE_LOCAL">
		<class>ec.edu.epn.modelo.Usuario</class>
		<class>ec.edu.epn.modelo.Request</class>
		<class>ec.edu.epn.modelo.Response</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=bdusuario"/>
			<property name="javax.persistence.jdbc.user" value="usuario"/>
			<property name="javax.persistence.jdbc.password" value="sa"/>
			<property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
		</properties>
	</persistence-unit>
</persistence>
